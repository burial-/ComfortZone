<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:background="@color/lvBg">

    <ImageView
        android:id="@+id/comic_list_item_quick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_picture"
        android:background="@null"
        android:paddingRight="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/comic_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/lvTitle"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:layout_weight="0">

            <TextView
                android:id="@+id/comic_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lvComicName" />

            <TextView
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lvComicHyphen" />

            <TextView
                android:id="@+id/comic_list_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lvComicAuthor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>